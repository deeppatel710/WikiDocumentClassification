        <span class="kw1">return</span> <span class="kw4">string</span>.<span class="me1">Format</span><span class="br0">(</span>
                <span class="st0">"Pizza with Dough as {0}, Sauce as {1} and Topping as {2}"</span>,
                Dough,
                Sauce,
                Topping<span class="br0">)</span>;
    <span class="br0">}</span>
<span class="br0">}</span>
 
